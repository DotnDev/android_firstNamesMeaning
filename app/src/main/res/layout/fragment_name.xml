<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?android:buttonBarButtonStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:textAlignment="center">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/name_name_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin_small"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/name_topCards_ll"
            >

            <TextView
                android:id="@+id/name_name_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_title"
                android:textStyle="bold"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/name_topCards_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_name_ll"
            app:layout_constraintBottom_toTopOf="@id/name_card3_ll"
>
        <LinearLayout
            android:id="@+id/name_card_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin_small"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/name_gender_title_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_gender_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_gender_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/name_numbers_title_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_numbers_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_numbers_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/name_card2_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin_small"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/name_origin_title_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_origin_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_origin_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/name_nameDay_title_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_nameDay_title"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/name_nameDay_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/name_card3_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/name_topCards_ll"
            app:layout_constraintBottom_toTopOf="@id/name_description_ll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <TextView
                android:id="@+id/name_etymology_title_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_etymology_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_etymology_txtView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:scrollHorizontally="false"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/name_description_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_card3_ll">


            <TextView
                android:id="@+id/name_desc_be_title_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin_small"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_regular"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/name_desc_be_txtView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_etymology_txtView" />


            <TextView
                android:id="@+id/name_desc_be_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/name_desc_love_title_txtView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_etymology_title_txtView" />

            <TextView
                android:id="@+id/name_desc_love_title_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin_small"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_regular"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/name_desc_love_txtView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_desc_be_txtView" />

            <TextView
                android:id="@+id/name_desc_love_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/name_desc_do_title_txtView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_desc_love_title_txtView" />

            <TextView
                android:id="@+id/name_desc_do_title_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin_small"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_regular"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/name_desc_do_txtView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_desc_love_txtView" />

            <TextView
                android:id="@+id/name_desc_do_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_desc_do_title_txtView" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>