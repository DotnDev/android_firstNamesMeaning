<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:padding="@dimen/padding_regular"
     >

    <TextView
        android:id="@+id/ranking_row_name_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ranking_row_gender_txtView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_regular"
        />


    <TextView
        android:id="@+id/ranking_row_gender_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin_regular"
        app:layout_constraintLeft_toRightOf="@id/ranking_row_name_txtView"
        app:layout_constraintRight_toLeftOf="@id/ranking_row_origin_txtView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_regular"
        />

    <TextView
        android:id="@+id/ranking_row_origin_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin_regular"

        app:layout_constraintLeft_toRightOf="@id/ranking_row_gender_txtView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_regular"
        />
</androidx.constraintlayout.widget.ConstraintLayout>