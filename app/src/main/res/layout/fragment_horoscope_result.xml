<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <TextView
        android:id="@+id/horoscope_title_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/horoscope_introduction_txtView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/horoscope_title"
        />

   <TextView
       android:id="@+id/horoscope_introduction_txtView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/horoscope_title_txtView"
       app:layout_constraintBottom_toTopOf="horoscope_name_editTxt"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:text="@string/horoscope_introduction"
       />

    <EditText
        android:id="@+id/horoscope_name_editTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/horoscope_introduction_txtView"
        app:layout_constraintBottom_toTopOf="@id/horoscope_email_editTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/widget_horoscope_input_name"
        android:autofillHints="name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/horoscope_email_editTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/horoscope_name_editTxt"
        app:layout_constraintBottom_toTopOf="@id/horoscope_remember_checkBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/widget_horoscope_input_email"
        android:autofillHints="email"
        android:inputType="textEmailAddress"
        />

    <CheckBox
        android:id="@+id/horoscope_remember_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/horoscope_email_editTxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/horoscope_remember"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
